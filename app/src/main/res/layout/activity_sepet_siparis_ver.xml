<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    android:fitsSystemWindows="true"
    tools:context=".ActivitySiparisVer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtSkAd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:hint="Ad"
                        android:inputType="textPersonName"
                        app:met_clearButton="true"
                        app:met_floatingLabel="highlight"
                        app:met_minCharacters="3"
                        app:met_primaryColor="?colorAccent"
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="#726d6d" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtSkSoyAd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:hint="Soyad"
                        android:inputType="textPersonName"
                        app:met_clearButton="true"
                        app:met_floatingLabel="highlight"
                        app:met_minCharacters="2"
                        app:met_primaryColor="?colorAccent"
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="#726d6d" />

                </LinearLayout>


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edtSkTelNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Telefon Numarası"
                    android:inputType="phone"
                    app:met_clearButton="true"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="11"
                    app:met_minCharacters="10"
                    app:met_primaryColor="?colorAccent"
                    app:met_singleLineEllipsis="true"
                    app:met_textColorHint="#726d6d" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edtSkEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:enabled="false"
                    android:hint="Mail Adresi"
                    android:inputType="textEmailAddress"
                    app:met_clearButton="true"
                    app:met_floatingLabel="highlight"
                    app:met_minCharacters="8"
                    app:met_primaryColor="?colorAccent"
                    app:met_singleLineEllipsis="true"
                    app:met_textColorHint="#726d6d" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edtSkTeslimatAdresi"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Teslimat Adresi"
                    android:inputType="textPostalAddress|textMultiLine"
                    app:met_clearButton="true"
                    app:met_floatingLabel="highlight"
                    app:met_minCharacters="20"
                    app:met_primaryColor="?colorAccent"
                    app:met_textColorHint="#726d6d" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edtSiparisFiyat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.4"
                        android:enabled="false"
                        android:hint="Toplam Fiyat : "
                        app:met_primaryColor="?colorAccent"
                        app:met_singleLineEllipsis="true"
                        app:met_textColorHint="#726d6d" />

                    <TextView
                        android:id="@+id/tvSiparisFiyati"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="0.3"
                        android:alpha="0.8"
                        android:background="#0097ff"
                        android:gravity="center"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:text="Toplam "
                        android:textColor="#fff"
                        android:textSize="23sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.3"
                        android:alpha="0.8"
                        android:background="#0097ff"
                        android:gravity="center"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text=" TL"
                        android:textColor="#fff"
                        android:textSize="23sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSiparisVazgec"
                        style="@style/ButtonSiparis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.4"
                        android:text="Vazgeç"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btnSiparisiOnayla"
                        style="@style/ButtonSiparis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.6"
                        android:text="Siparişi Onayla"
                        android:textColor="#FFFFFF" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</android.support.v4.widget.DrawerLayout>