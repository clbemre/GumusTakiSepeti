<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:fitsSystemWindows="true"
    tools:context=".Activity_Siparis_Detay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.7"
            android:scrollbarStyle="outsideOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginTop="9dp"
                    android:foreground="@drawable/custom_bg"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="0.01dp">

                    <RelativeLayout
                        android:id="@+id/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sdImgSiparis"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginBottom="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/stub" />

                        <!--background: 5c1b1b1b-->
                        <TextView
                            android:id="@+id/tvSDUrunAdi"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignBottom="@+id/sdImgSiparis"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="bottom"
                            android:alpha="0.8"
                            android:background="#bab8b8"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="--"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSDKargoDurumu"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.3"
                            android:alpha="0.8"
                            android:background="#f21313"
                            android:gravity="center"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="Kargo Durumu : "
                            android:textColor="#fff"
                            android:textStyle="italic" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/tvSDSiparisKodu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:alpha="0.8"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Siparis Kodu"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="@string/yukleniyor"
                            android:textSize="18dp"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/tvSDAdet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:alpha="0.8"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Adet"
                            android:inputType="textNoSuggestions"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="@string/yukleniyor"
                            android:textSize="18dp"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/tvSDAdSoyad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:alpha="0.8"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Ad Soyad"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="@string/yukleniyor"
                            android:textSize="20dp"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/tvSDTelNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:alpha="0.8"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Telefon NumarasÄ±"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="@string/yukleniyor"
                            android:textSize="20dp"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/tvSDAdres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Adres"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="@string/yukleniyor"
                            android:textSize="18dp"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent" />


                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/tvSDMesaj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:alpha="0.8"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Ãzel Mesaj"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="@string/yukleniyor"
                            android:textSize="18dp"
                            app:met_floatingLabel="highlight"
                            app:met_primaryColor="?colorAccent" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSDFiyat"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:alpha="0.8"
                            android:background="#0097ff"
                            android:gravity="center"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:text="--"
                            android:textColor="#fff"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>